local Rayfield = loadstring(game:HttpGet("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"))() -- Keep your Rayfield setup if needed

-- Create the Window
local Window = Rayfield:CreateWindow({
    Name = "29yumoos Hub",
    LoadingTitle = "29yumoos Hub",
    LoadingSubtitle = "by 29yumoos",
    Theme = "Amethyst",
    ToggleUIKeybind = "K",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = nil,
        FileName = "29yumoosHub"
    }
})

-- Create Main and Settings Tabs
local MainTab = Window:CreateTab("Main", "settings")
local SettingsTab = Window:CreateTab("Settings", "settings")

-- Main Tab Buttons
MainTab:CreateButton({
    Name = "Infinite Yield",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"))()
        Rayfield:Notify({
            Title = "Infinite Yield",
            Content = "Loaded successfully!",
            Duration = 5,
            Image = "check-circle"
        })
    end
})

MainTab:CreateButton({
    Name = "Ez Hub",
    Callback = function()
        loadstring(game:HttpGet("https://rawscripts.net/raw/Ez-Hub_168"))()
        Rayfield:Notify({
            Title = "Ez Hub",
            Content = "Loaded successfully!",
            Duration = 5,
            Image = "check-circle"
        })
    end
})

MainTab:CreateButton({
    Name = "Beta Hub",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/idkname471/29yumoos-Roblox-Hub/refs/heads/main/Newer%20hub"))()
        Rayfield:Notify({
            Title = "Beta Hub",
            Content = "Loaded successfully!",
            Duration = 5,
            Image = "check-circle"
        })
    end
})

-- Settings Tab for Themes
local ThemeDropdown = SettingsTab:CreateDropdown({
    Name = "Theme Selector",
    Options = {"Default", "Amber Glow", "Amethyst", "Bloom", "Dark Blue", "Green", "Light", "Ocean", "Serenity"},
    CurrentOption = {"Amethyst"},
    MultipleOptions = false,
    Callback = function(option)
        Window:ModifyTheme(option
